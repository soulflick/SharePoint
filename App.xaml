<Application x:Class="SharePoint.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="pack://application:,,,/SharePoint;component/Styles/SolidColors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/SharePoint;component/Styles/Black.xaml" />
                <ResourceDictionary Source="pack://application:,,,/SharePoint;component/Styles/Styles.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
